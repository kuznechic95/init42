#!/bin/bash

if [ ! -f /etc/crontab_key ]
then
	md5sum /etc/crontab > /etc/crontab_key
	echo "0 0 * * * root sudo sh ~/04.sh" >> /etc/crontab
fi

md5sum /etc/contrab > tmp_crontab_key
DIFF=$(diff /etc/crontab_key tmp_crontab_key)
rm tmp_crontab_key

if [ "$DIFF" != "" ]
then
	mail -s "Crontab modified" root@localhost.com < /etc/crontab
	md5sum /etc/crontab > /etc/crontab_key
fi
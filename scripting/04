#!/bin/bash

if [ ! -f /etc/crontab_key ]
then
	md5sum /etc/crontab > /etc/crontab_key
	echo "0 0 * * * root sudo sh /root/04.sh" >> /etc/crontab
fi

md5sum /etc/contrab > tmp
DIFF=$(diff /etc/crontab_key tmp)
rm tmp

if [ "$DIFF" != "" ]
then
	mail -s "Crontab modified" root@localhost.com < /etc/crontab
	md5sum /etc/crontab > /etc/crontab_key
fi
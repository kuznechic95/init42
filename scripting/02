echo "crontab -l 0 4 * * * apt-get update >> /var/log/update_script.log && apt-get upgrade >> /var/log/update_script.log" >> tmpfile
sh tmpfile
rm tmpfile


echo 'apt-get update && apt-get upgrade >> /var/log/update_script.log' >> ~/apt_update.sh

